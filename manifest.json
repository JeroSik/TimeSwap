{
  "manifest_version": 2,

  "name": "TimeSwap",
  "description": "Changes time on webpages to user's time zone.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Time Swap",
    "default_popup": "popup.html"
  },
  "content_scripts": [
   {
     "matches": [
       "<all_urls>"
     ],
     "js": ["jquery-3.2.1.min.js", "content.js"]    
    }
  ],
  "permissions": [
    "geolocation",
    "background",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]

}
